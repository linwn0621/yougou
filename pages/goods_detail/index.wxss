/* pages/goods_detail/index.wxss */
.active {
  color: red;
}
.goods .goods_swiper swiper {
  height: 650rpx;
  width: 100%;
}
.goods .goods_swiper swiper swiper-item {
  text-align: center;
}
.goods .goods_swiper swiper swiper-item image {
  height: 100%;
}
.goods .goods_details {
  margin-top: 20rpx;
}
.goods .goods_details .tier1 {
  display: flex;
  justify-content: space-between;
  margin: 0 35rpx;
}
.goods .goods_details .tier1 .tier1_price {
  color: #ea4350;
  font-size: 36rpx;
}
.goods .goods_details .tier1 .tier1_icon {
  display: flex;
  justify-content: space-between;
  width: 115rpx;
}
.goods .goods_details .tier1 .tier1_icon .fenxiang {
  position: relative;
  width: 36rpx;
  overflow: hidden;
}
.goods .goods_details .tier1 .tier1_icon .fenxiang .fenxiang_icon {
  font-size: 36rpx;
}
.goods .goods_details .tier1 .tier1_icon .fenxiang button {
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
}
.goods .goods_details .tier1 .tier1_icon .shoucang {
  width: 36rpx;
  font-size: 36rpx;
}
.goods .goods_details .tier2 {
  font-size: 30rpx;
  line-height: 42rpx;
  margin: 19rpx 35rpx 86rpx 35rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
}
.goods .goods_details .tier3 {
  margin-bottom: 94rpx ;
}
.goods .goods_details .tier3 .tier3_text {
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.goods .goods_details .tier4 {
  width: 100%;
  height: 94rpx;
  position: fixed;
  bottom: 0;
  background-color: #ffffff;
  display: flex;
  align-items: center;
}
.goods .goods_details .tier4 .kefu {
  position: relative;
  margin: 0 50rpx 0 62rpx;
  text-align: center;
  color: #434343;
}
.goods .goods_details .tier4 .kefu .kefuicon {
  font-size: 40rpx;
}
.goods .goods_details .tier4 .kefu .text {
  font-size: 20rpx;
  line-height: 28rpx;
}
.goods .goods_details .tier4 .kefu button {
  opacity: 0;
  width: 28rpx;
  height: 94rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.goods .goods_details .tier4 .car {
  color: #434343;
  margin-right: 48rpx;
  text-align: center;
}
.goods .goods_details .tier4 .car navigator .caricon {
  font-size: 40rpx;
}
.goods .goods_details .tier4 .car navigator .text {
  font-size: 20rpx;
  line-height: 28rpx;
}
.goods .goods_details .tier4 .btncar {
  width: 196rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #ffffff;
  border-radius: 30rpx;
  background-color: #fcaa23;
  text-align: center;
  margin-right: 22rpx;
}
.goods .goods_details .tier4 .btnbuy {
  width: 196rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #ffffff;
  border-radius: 30rpx;
  background-color: #ea4350;
  text-align: center;
}
