/* pages/goods_detail/index.wxss */
.goods .goods_swiper swiper {
  height: 650rpx;
  width: 100%;
}
.goods .goods_swiper swiper swiper-item {
  text-align: center;
}
.goods .goods_swiper swiper swiper-item image {
  height: 100%;
}
.goods .goods_details .tier1 {
  display: flex;
  justify-content: space-between;
  margin: 0 35rpx;
}
.goods .goods_details .tier1 .tier1_price {
  color: #ea4350;
  font-size: 36rpx;
}
.goods .goods_details .tier1 .tier1_icon {
  display: flex;
  justify-content: space-between;
  width: 115rpx;
}
.goods .goods_details .tier1 .tier1_icon .fenxiang {
  position: relative;
  width: 36rpx;
  overflow: hidden;
}
.goods .goods_details .tier1 .tier1_icon .fenxiang .fenxiang_icon {
  font-size: 36rpx;
}
.goods .goods_details .tier1 .tier1_icon .fenxiang button {
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  background-color: red;
}
.goods .goods_details .tier1 .tier1_icon .shoucang {
  width: 36rpx;
  font-size: 36rpx;
}
.goods .goods_details .tier2 {
  padding: 0 35rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 19rpx;
  padding-bottom: 86rpx;
}
.goods .goods_details .tier3 .tier3_text {
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
